body
  background black
  padding 0
  margin 0
  height 100vh
  overflow hidden
  text-transform uppercase

.home
  height 100vh
  width 100%
  display flex
  align-items center
  justify-content center

.title
  font-size 15rem
  width 14ch
  clip-path: url(#cut-off-bottom)
  display flex
  align-items center
  justify-content center

.svg-title
  position absolute
  top 0
  left 0
  font-size 0.95em

.title-text
  font-family Roboto, sans-serif
  font-weight 1000
  letter-spacing 0em
  transform translate(50%)

.svg-title
  width 100%
  height 100%

.title-video
  display block
  position relative
  width 100%

.center
  position absolute
  width 30px
  height 30px
  border-radius 50%
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background white
  z-index 10

@media screen and (max-width 1200px)
  .title
    font-size 12rem

@media screen and (max-width 920px)
  .title
    font-size 7rem

@media screen and (max-width 660px)
  .title
    font-size 5rem

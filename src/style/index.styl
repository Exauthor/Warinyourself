body
  background black
  padding 0
  margin 0
  height 100vh
  overflow hidden

.main-title
  color white
  font-size 4rem
  font-weight 1000
  text-align center
  font-family sans-serif
  text-transform uppercase
  background linear-gradient(90deg, blue, yellow)
  background-clip text
  -webkit-background-clip text
  -webkit-text-fill-color transparent

.home
  height 100vh
  width 100%
  display flex
  align-items center
  justify-content center

.title
  font-size 9rem
  width 4em
  clip-path: url(#cut-off-bottom)

.svg-title
  position absolute
  top 0
  left 0
  font-size 0.95em

.title-text
  font-family Roboto, sans-serif
  font-weight 1000
  letter-spacing 0em
  transform translate(50%)

.svg-title
  width 100%
  height 100%

.title-video
  display block
  width 100%

@media screen and (max-width 660px)
  .title
    font-size 5rem
